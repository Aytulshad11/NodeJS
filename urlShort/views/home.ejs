<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Hello from server</h1>
        <%  if(locals.id){ %>
            <p>URL Generated: http://localhost:8000/url/<%= id %></p>
        <% } %>
